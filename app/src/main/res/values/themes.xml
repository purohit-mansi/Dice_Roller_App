<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiceRoller" parent="Theme.AppCompat.Light.DarkActionBar"><!--Theme.MaterialComponents.DayNight.DarkActionBar-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.DiceRoller.Font">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.DiceRoller.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/red</item>
        <item name="popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
    </style>

    <style name="Theme.DiceRoller.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/extras_light_red
        </item>
        <item name="popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
    </style>

    <style name="MyText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/_2sdp</item>
    </style>

    <style name="myPopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BrandedSwitch" parent="Theme.DiceRoller">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">#ffa000</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>
</resources>