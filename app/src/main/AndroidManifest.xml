<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mansidev.diceroller">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/round_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiceRoller">

        <activity
            android:name=".FirstActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DiceRoller.Splash"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MasterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DiceRoller.Font"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.DiceRoller.NoTitle"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>